rem(a)
  (a / (750/640*50))rem

rem2(a)
  ((a*32) / (750/640*50))rem

split-line-color= #d9d9d9

*
  box-sizing border-box
body,ul,li
  padding 0
  margin 0
  border 0

.icon
  width rem2(1.88)
  height rem2(1.88)

.icon2
  width rem2(0.7)
  height rem2(0.7)
  margin-left rem(20)

.sleep-page
  background:#ffffff;
  .desc
    padding 0 rem2(1.25)
    text-align left

    .icon
      width rem2(0.8125)
      height rem2(0.8125)
    .subtitle
      display -webkit-box
      display -moz-box
      display -ms-flexbox
      display -webkit-flex
      display flex
      -webkit-box-sizing border-box
      align-items center
      justify-content flex-start
      -webkit-justify-content flex-start
      color #a5a5a5
      font-size rem2(0.875)
      font-weight normal
      .icon
        margin-right rem(10)
    .bar
      height rem2(0.31)
      border-radius 2px

  .desc-item
    padding rem2(0.94) 0
    padding-bottom rem(30)
    position relative
    &:first-child
      &:after
        content ''
        height 1px
        width 200%
        position absolute
        left -50%
        bottom 0
        background split-line-color
        transform scale(0.5)
        -webkit-transform scale(0.5)




  .total-desc
    color #676767
    margin-top rem2(0.625)

  .quality-st
    padding rem2(0.94) 0
    padding-bottom 0

  .st
    display -webkit-box
    display -moz-box
    display -ms-flexbox
    display -webkit-flex
    display flex
    -webkit-box-sizing border-box
    color #676767
    margin-top rem2(1.25)
    height 0.76rem
    &:first-child
      margin-top 0
    .st-name

      font-size rem2(1)
      margin-right rem2(1.25)

    .st-desc
      width rem(474)
      flex 5
      -webkit-flex 5
      position relative
      top -0.4rem

